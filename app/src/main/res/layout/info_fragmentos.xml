    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Texto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="75dp"
        android:paddingTop="40dp"
        android:text="LOL GUY"
        android:textColor="@android:color/darker_gray"
        android:textSize="40dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/imagen1"
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:scaleType="centerInside"
        android:src="@drawable/cereal_guy" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOL Guy is a rage comic character that if often used to indicate laugther and insultos "
        android:id="@+id/Texto2"
        android:textSize="18dp"
        android:paddingTop="35dp"
        android:textColor="@android:color/darker_gray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Texto3"
        android:text="htttp://Aqui_va_una_ruta.com"
        android:textSize="17dp"
        android:textColor="@android:color/darker_gray"
        android:paddingTop="41dp"

        />
